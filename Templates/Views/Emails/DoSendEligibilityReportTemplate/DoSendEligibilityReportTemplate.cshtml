        <tbody>
            <tr>
                <th style="background: #286090;color: white;border: 1px solid #f1f1f4;padding: 8px 12px;text-align: left;font-size: 15px;font-weight: 500;line-height: 16px;">Discovered Eligibility</th>
                <th style="background: #286090;color: white;border: 1px solid #f1f1f4;padding: 8px 12px;text-align: left;font-size: 15px;font-weight: 500;line-height: 16px;width: 30%;min-width: 150px;">Count</th>

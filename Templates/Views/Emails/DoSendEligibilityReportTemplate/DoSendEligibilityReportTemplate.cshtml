            </tr>
            @foreach (var item in Model.CorrectedInsurances)
            {
                <tr>
                    <td style="border: 1px solid #dddddd;text-align: left;padding: 8px 12px;font-size: 14px;line-height: 18px;">@item.PayerName </td>
                    <td style="border: 1px solid #dddddd;text-align: left;padding: 8px 12px;font-size: 14px;line-height: 18px;">@item.Count</td>
                </tr>
            }
        </tbody>
    </table>
